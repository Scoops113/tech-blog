 <main>
    {{#if user}}
      <a href="/dashboard/new" class="btn btn-primary">Create New Post</a>
    {{/if}}

    <h1>Blog Posts</h1>
    {{#each posts}}
      <div>
        <h2><a href="/posts/{{this.id}}">{{this.title}}</a></h2>
        <p>{{this.content}}</p>
        <p>Posted by {{this.User.username}} on {{this.createdAt}}</p>
      </div>
    {{/each}}
  </main>
